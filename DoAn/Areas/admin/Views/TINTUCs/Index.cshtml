@model IEnumerable<DoAn.Models.TINTUC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row" style="margin-left:10px">
    <div class="col-sm-12">
        <h2>Tin Tức</h2>
        <p><a class="btn btn-success" style="border-radius:0" href="/admin/tintucs/Create">THÊM MỚI</a></p>
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Tên Tin Tức
                </th>
                <th>
                    Mô Tả
                </th>
                <th>
                   Nội Dung
                </th>
                <th>
                  Từ Khóa
                </th>
                <th>
                    Tiêu Đề Seo
                </th>
                <th>
                    Alias
                </th>
                <th>
                    Hình Ảnh
                </th>
               
                <th>
                    Tên Danh Mục
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenTinTuc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TuKhoa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TieuDeSeo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        <img src="@item.HinhAnh" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DMTT.TenDMTT)
                    </td>
                    <td>
                        <a class="btn btn-warning btn-xs" style="border-radius:0" href="/Admin/tintucs/edit/@item.ID"><i class="fa fa-edit"></i></a> |

                        <a class="btn btn-danger btn-xs" style="border-radius:0" href="/Admin/tintucs/delete/@item.ID"><i class="fa fa-recycle"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


