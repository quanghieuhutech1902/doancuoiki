@model IEnumerable<DoAn.Models.DMSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row" style="margin-left:10px">
    <div class="col-sm-12">
        <h2>DANH SÁCH DANH MỤC SẢN PHẨM</h2>
        <p><a class="btn btn-success" style="border-radius:0" href="/admin/dmsps/Create">THÊM MỚI</a></p>
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Tên Loại Cây
                </th>
                <th>
                    Tên Tiêu Đề Seo
                </th>
                <th>
                    Từ Khóa
                </th>
                <th>
                    Xóa Tạm
                </th>
                <th>
                    Hình Ảnh
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TieuDeSeo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TuKhoa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.XoaTam)
                    </td>
                    <td>
                        <img src="@item.HinhAnh" width="100" />
                    </td>
                    <td>
                        <a class="btn btn-warning btn-xs" style="border-radius:0" href="/Admin/dmsps/edit/@item.ID"><i class="fa fa-edit"></i></a> |

                        <a class="btn btn-danger btn-xs" style="border-radius:0" href="/Admin/dmsps/delete/@item.ID"><i class="fa fa-recycle"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


